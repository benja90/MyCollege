                        android:text="@string/note_present"/>
                    <EditText
                        android:id="@+id/txt_score06"
                        android:paddingLeft="@dimen/activity_note_vertical_scoreText"
                        android:paddingRight="@dimen/activity_note_vertical_scoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/note_hint"
                        android:inputType="number"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note_session_07"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <CheckBox
                        android:id="@+id/cbx_score07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note_present"/>
                    <EditText
                        android:id="@+id/txt_score07"
                        android:paddingLeft="@dimen/activity_note_vertical_scoreText"
                        android:paddingRight="@dimen/activity_note_vertical_scoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/note_hint"
                        android:inputType="number"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note_session_08"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <CheckBox
                        android:id="@+id/cbx_score08"
                        android:layout_width="wrap_content"
